// This file is the descriptor for the Custom code recipe wordcloud-recipe
{
    // Meta data for display purposes
    "meta": {
        // label: name of the recipe as displayed, should be short
        "label": "Wordcloud",
        // description: longer string to help end users understand what this recipe does
        "description": "Generate wordclouds based on a text column",
        // icon: must be one of the FontAwesome 3.2.1 icons, complete list here at https://fontawesome.com/v3.2.1/icons/
        "icon": "icon-cloud"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input",
    "inputRoles": [
        {
            "name": "input",
            "label": "Input dataset",
            "description": "Dataset on which to compute the wordclouds",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true,
            "acceptsManagedFolder": false
        }
    ],
    "outputRoles": [
        {
            "name": "output",
            "label": "Output folder",
            "description": "Folder to store the wordclouds images",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": false,
            "acceptsManagedFolder": true
        }
    ],
    "paramsPythonSetup": "get_language_list.py",
    "params": [
        {
            "name": "text_column",
            "type": "COLUMN",
            "columnRole": "input",
            "label": "Text column",
            "description": "Text column used to generate the wordclouds",
            "mandatory": true
        },
        {
            "name": "language",
            "type": "SELECT",
            "getChoicesFromPython": true,
            "label": "Language",
            "description": "Language used to process text",
            "mandatory": false,
            "defaultValue": "en"
        },
        {
            "name": "lemmatize",
            "type": "BOOLEAN",
            "label": "Lematize text",
            "description": "",
            "mandatory": false
        },
        {
            "name": "tokens_filter",
            "label": "Filter tokens",
            "type": "MULTISELECT",
            "description": "Select token types to filter",
            "selectChoices": [
                {
                    "value": "is_space",
                    "label": "Space"
                },
                {
                    "value": "is_punct",
                    "label": "Punctuation"
                },
                {
                    "value": "is_digit",
                    "label": "Digit"
                },
                {
                    "value": "is_currency",
                    "label": "Currency"
                },
                {
                    "value": "is_stop",
                    "label": "Stopword"
                },
                {
                    "value": "like_url",
                    "label": "Url"
                },
                {
                    "value": "like_email",
                    "label": "Email"
                },
                {
                    "value": "like_num",
                    "label": "Number"
                },
                {
                    "value": "is_emoji",
                    "label": "Emoji"
                },
                {
                    "value": "is_hashtag",
                    "label": "Hashtag"
                },
                {
                    "value": "is_username",
                    "label": "Username"
                },
                {
                    "value": "is_symbol",
                    "label": "Symbol"
                },
                {
                    "value": "is_unit",
                    "label": "Unit"
                },
                {
                    "value": "is_time",
                    "label": "Time"
                }
            ],
            "defaultValue": [
                "is_space",
                "is_punct",
                "is_digit",
                "is_currency",
                "is_stop",
                "like_url",
                "like_email",
                "like_num",
                "is_username",
                "is_symbol",
                "is_unit",
                "is_time"
            ]
        },
        {
            "name": "sep1",
            "label": "Subcharts",
            "type": "SEPARATOR"
        },
        {
            "name": "subchart_column",
            "type": "COLUMN",
            "columnRole": "input",
            "label": "Subcharts column",
            "description": "Categorical column used to create subcharts",
            "mandatory": false
        }
    ],
    // The field "resourceKeys" holds a list of keys that allows to limit the number
    // of concurrent executions and activities triggered by this recipe.
    //
    // Administrators can configure the limit per resource key in the Administration > Settings > Flow build
    // screen.
    "resourceKeys": []
}